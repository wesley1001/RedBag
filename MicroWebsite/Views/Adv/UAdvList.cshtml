@{
    ViewBag.Title = "UAdvList";
    Layout = "~/Views/Shared/_WorkspaceLayout.cshtml";
}
@using Core
@using DataAccessLayer
@model MicroWebsite.Models.AdvListModel
<h2>我的广告</h2>
<a href="@Url.Action("Create", "Adv")">创建新广告</a>
<table>
    <tr>
        <td>广告标题</td>
        <td>状态</td>
        <td>操作</td>
    </tr>
    @foreach (AdvInfo u in Model.Advs)
    {
        <tr>
            <td>@u.AdvTitle</td>
            <td>@SystemStaticData.LookUpAdvStatusId(u.Status)</td>
            <td>
                @if (u.Status == SystemStaticData.LookUpUserStatusId(SystemStaticData.UserDictionary.Normal))
                {
                    <a href="">终止广告</a>
                }
                <a href="">详情</a>
            </td>
        </tr>
    }
</table>