@using Core
<!DOCTYPE html>
<html lang="zh">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title - 系统管理</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <script type="text/javascript" src="~/Scripts/respond.min.js"></script>
    <script type="text/javascript" src="~/Scripts/html5shiv.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/jquery.dataTables.min.css")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/jquery.dataTables.min.css" type="text/css" />
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
</head>
<body>
    <section>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button aria-expanded="false" data-target="#bs-example-navbar-collapse-9" data-toggle="collapse" class="navbar-toggle collapsed" type="button">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="#" class="navbar-brand">
                        <img src="~/images/Logo-Mall.png"></a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div id="bs-example-navbar-collapse-9" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navigation">
                        <li class="active"><a href="#">所有广告</a></li>

                    </ul>
                    <ul class="nav navbar-nav pull-right">
                        <li>
                            <img src="~/Images/avatar.png" style="height: 60px;"></li>
                        <li><a href="#">麦克茂 <i class="text-warning glyphicon glyphicon-chevron-down"></i></a></li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-fluid -->
        </nav>
    </section>
    <section class="main">
        <div class="sidebar" id="sidebar">
            <h4 class="text-center">欢迎，麦克茂</h4>
            @if (Convert.ToInt32(Session["Role"]) == (int)UserRole.Admin)
            {

                <ul class="menu-title">
                    <li><i class="glyphicon glyphicon-user"></i>@Html.ActionLink("用户管理", "UserList", "User")</li>
                    <li><i class="glyphicon glyphicon-tasks"></i>@Html.ActionLink("广告管理", "AdvList", "Adv")</li>
                    <li><i class="glyphicon glyphicon-cog"></i>@Html.ActionLink("系统设定", "Index", "SysConfig")</li>
                    <li><i class="glyphicon glyphicon-map-marker"></i>@Html.ActionLink("区域设定", "AreaIndex", "SysConfig")</li>
                    <li><i class="glyphicon glyphicon-credit-card"></i>@Html.ActionLink("充值管理", "AdminRechargeHistory", "User")</li>
                    <li><i class="glyphicon glyphicon-yen"></i>系统收益</li>
                </ul>
            }
            else
            {

                <ul>
                    <li><i class="glyphicon glyphicon-picture"></i>@Html.ActionLink("我的广告", "UAdvList", "Adv")</li>
                </ul>
            }
        </div>
        <div class="main-wrap" id="main-wrap">
            @RenderBody()
            <div class="text-center text-muted margin-top-30">
                <!-- <div class="footer"> -->
                &copy; copyright 2016	<span class="margin-left-15">公司地址：长沙市岳麓区</span> <span class="margin-left-15">电话：<span class="text-warning">0731-87659803</span></span>
                <!-- </div> -->
            </div>
        </div>
    </section>
    @RenderSection("scripts", required: false)
</body>
</html>
<script type="text/javascript">
    $(function () {
        var a = document.getElementById("sidebar");
        var b = document.getElementById("main-wrap");
        if (a.clientHeight < b.clientHeight) {
            a.style.height = b.clientHeight + "px";
        } else {
            b.style.height = a.clientHeight + "px";
        }

    });
    $(document).ready(function () {
        $('.menu-title li').click(function () {

            $('.menu-title li').removeClass('active');
            $(this).addClass('active');
        });
        $('.navigation li').click(function () {

            $('.navigation li').removeClass('active');
            $(this).addClass('active');
        });

    });
	</script>
