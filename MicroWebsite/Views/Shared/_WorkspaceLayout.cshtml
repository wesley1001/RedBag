@using Core
<!DOCTYPE html>
<html lang="zh">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title - 系统管理</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    <link rel="stylesheet" href="http://cdn.bootcss.com/bootstrap/3.3.5/css/bootstrap.min.css">
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/Font-Awesome-3.2.1/css/font-awesome.min.css")
    @Styles.Render("~/Content/jquery.dataTables.min.css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/common.css")
    <link rel="~/Content/jquery.dataTables.min.css" type="text/css" />
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
</head>
<body>
    <section>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button aria-expanded="false" data-target="#bs-example-navbar-collapse-9" data-toggle="collapse" class="navbar-toggle collapsed" type="button">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="#" class="navbar-brand">
                        <img src="~/images/Logo-Mall.png">
                    </a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div id="bs-example-navbar-collapse-9" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navigation">
                        <li class="active"><a href="#">所有广告</a></li>

                    </ul>

                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-fluid -->
        </nav>
    </section>
    <section class="main">
        <div class="sidebar" id="sidebar">
            <h4 class="text-center">欢迎，麦克茂</h4>
            @if (Convert.ToInt32(Session["Role"]) == (int)UserRole.Admin)
            {

                <ul class="menu-title">
                    <li><a href="@Url.Action("UserList", "User")"><i class="glyphicon glyphicon-user"></i> 用户管理</a></li>
                    <li><a href="@Url.Action("Index", "SysConfig")"><i class="glyphicon glyphicon-cog"></i> 系统设定</a></li>
                    <li><a href="@Url.Action("AdvList", "Adv")"><i class="glyphicon glyphicon-tasks"></i> 广告管理</a></li>
                    <li><a href="@Url.Action("AreaIndex", "SysConfig")"><i class="glyphicon glyphicon-map-marker"></i> 区域设定</a></li>
                    <li><a href="@Url.Action("UAdvList", "Adv")"><i class="glyphicon glyphicon-picture"></i> 我的广告</a></li>
                    <li><a href="@Url.Action("AdminRechargeHistory", "User")"><i class="glyphicon glyphicon-credit-card"></i> 充值管理</a></li>
                    <li><a href="@Url.Action("UserList", "User")"><i class="glyphicon glyphicon-yen"></i> 系统收益</a></li>
                   
                </ul>
            }
            else
            {

                <ul>
                    <li><i class="glyphicon glyphicon-picture"></i>@Html.ActionLink("我的广告", "UAdvList", "Adv")</li>
                </ul>
            }
        </div>
        <div class="main-wrap" id="main-wrap">
            @RenderBody()
            
        </div>
        <div class="footer-main text-muted">
            <div class="text-center">
                &copy; copyright 2016	<span class="margin-left-15">公司地址：长沙市岳麓区</span> <span class="margin-left-15">电话：<span class="text-warning">0731-87659803</span></span>
            </div>
        </div>
    </section>
    @RenderSection("scripts", required: false)
</body>
</html>

