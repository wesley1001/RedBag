@{
    ViewBag.Title = "CreateReward";
    Layout = "~/Views/Shared/_WorkspaceLayout.cshtml";
}
@model DataAccessLayer.RewardType
<h2>创建红包奖励金额</h2>
@using (Html.BeginForm())
{
    <div>
        @Html.AntiForgeryToken()
        <span>金额</span>: @Html.TextBoxFor(m => m.RewardValue)
        @Html.ValidationMessageFor(m => m.RewardValue)
        <span>描述</span>: @Html.TextBoxFor(m => m.Description)
        <span>简称</span>: @Html.TextBoxFor(m => m.ShortDescription)
        <input type="submit" value="Submit" />
    </div>
}
