@using MicroWebsite.Models
@{
    ViewBag.Title = "充值管理";
    Layout = "~/Views/Shared/_WorkspaceLayout.cshtml";
}
@model RechargeModel
<h2>充值管理</h2>
<a href="@Url.Action("RechargeAccount","User")">账户充值</a>
<table cellpadding="0" cellspacing="0" id="rechargeHistoryTable" class="table table-hover">
    <thead>
        <th>充值账户</th>
        <th>充值金额</th>
        <th>充值时间</th>
        <th>操作人</th>
        <th>充值奖励</th>
        <th>备注</th>
    </thead>
    @foreach (RechargeHistoryList u in Model.List)
    {
        <tr>
            <td>@u.ToAccountName</td>
            <td>@u.RechargeCash</td>
            <td>@u.CreateAt</td>
            <td>@u.OperatorName</td>
            <td>@u.RechargeRewardName</td>
            <td>@u.Details</td>
        </tr>
    }
</table>
<script>

    var optionArea = {
        "iDisplayLength": 10,
        'bLengthChange': false,
        "language": {
            "search": "筛选 : ",
            "info": " _START_  - _END_ 总共 _TOTAL_ 记录",
            "paginate": {
                "first": "首页",
                "last": "尾页",
                "next": "下一页",
                "previous": "上一页"
            }
        },
        "aoColumnDefs": [
            { "bSortable": false, "aTargets": [5] },
            { "type": "usdate", "aTargets": [2] }
        ],
        "fnDrawCallback": function () {
            //setConfirmValue();
        }
    };

    

    $(document).ready(function () {
        $("#rechargeHistoryTable").dataTable(optionArea);
    });

</script>