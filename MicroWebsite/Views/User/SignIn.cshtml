@{
    ViewBag.Title = "SignIn";
}
@model MicroWebsite.Models.SignInModel

<div class="media-right">
    <form action="@Url.Action("SignIn","User")" method="POST" class="login">

        @Html.AntiForgeryToken()
        <div class="logo">
            <img src="~/images/logo.png" alt="">
        </div>
        <div class="form-group">
            <i class="glyphicon glyphicon-user"></i>
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control padding-left-20", @placeholder = "用户名" })
            @Html.ValidationMessageFor(m => m.UserName)
        </div>
        <div class="form-group">
            <i class="glyphicon glyphicon-lock"></i>
            @Html.PasswordFor(m => m.UserName, new { @class = "form-control padding-left-20", @placeholder = "密码" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div class="margin-bottom-20">忘记密码？</div>
        <button type="submit" class="btn btn-warning btn-block">登 录</button>
    </form>

</div>

